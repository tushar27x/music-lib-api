{
    "swagger": "2.0",
    "info": {
        "description": "A RESTful API for managing music library with albums, songs, and playlists",
        "title": "Music Library API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:{{.PORT}}",
    "basePath": "/api",
    "paths": {
        "/albums/addAlbum": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Create a new album (artists only)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "albums"
                ],
                "summary": "Create a new album",
                "parameters": [
                    {
                        "description": "Album data",
                        "name": "album",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.AlbumCreateRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.AlbumResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/albums/getAllAlbums": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieve all albums for the authenticated user",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "albums"
                ],
                "summary": "Get all albums",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.AlbumResponse"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Authenticate user and get JWT token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "User login",
                "parameters": [
                    {
                        "description": "Login credentials",
                        "name": "credentials",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UserLoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "Create a new user account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Register a new user",
                "parameters": [
                    {
                        "description": "User registration data",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UserRegisterRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.UserResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/ping": {
            "get": {
                "description": "Get server health status",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Health check endpoint",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/playlists/addPlaylist": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Create a new playlist with songs",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "playlists"
                ],
                "summary": "Add a new playlist",
                "parameters": [
                    {
                        "description": "Playlist data",
                        "name": "playlist",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.PlaylistCreateRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.PlaylistResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/playlists/getAllPlaylists": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieve all playlists for the authenticated user",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "playlists"
                ],
                "summary": "Get all playlists",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/songs/addSong": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Add a new song to the user's library",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "songs"
                ],
                "summary": "Add a new song",
                "parameters": [
                    {
                        "description": "Song data",
                        "name": "song",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SongCreateRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/songs/getAllSongs": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieve all songs for the authenticated user",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "songs"
                ],
                "summary": "Get all songs",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.AlbumCreateRequest": {
            "description": "Album creation request model",
            "type": "object",
            "required": [
                "artist",
                "title",
                "year"
            ],
            "properties": {
                "artist": {
                    "description": "@Description Album artist",
                    "type": "string",
                    "example": "Pink Floyd"
                },
                "title": {
                    "description": "@Description Album title",
                    "type": "string",
                    "example": "Dark Side of the Moon"
                },
                "year": {
                    "description": "@Description Release year",
                    "type": "integer",
                    "example": 1973
                }
            }
        },
        "models.AlbumResponse": {
            "description": "Album response model",
            "type": "object",
            "properties": {
                "artist": {
                    "description": "@Description Album artist",
                    "type": "string",
                    "example": "Pink Floyd"
                },
                "created_at": {
                    "description": "@Description When the album was created",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "id": {
                    "description": "@Description Unique identifier for the album",
                    "type": "integer",
                    "example": 1
                },
                "songs": {
                    "description": "@Description Songs in the album",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.SongResponse"
                    }
                },
                "title": {
                    "description": "@Description Album title",
                    "type": "string",
                    "example": "Dark Side of the Moon"
                },
                "updated_at": {
                    "description": "@Description When the album was last updated",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "user_id": {
                    "description": "@Description User ID who owns the album",
                    "type": "integer",
                    "example": 1
                },
                "year": {
                    "description": "@Description Release year",
                    "type": "integer",
                    "example": 1973
                }
            }
        },
        "models.PlaylistCreateRequest": {
            "type": "object"
        },
        "models.PlaylistResponse": {
            "description": "Playlist response model",
            "type": "object",
            "properties": {
                "created_at": {
                    "description": "@Description When the playlist was created",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "id": {
                    "description": "@Description Unique identifier for the playlist",
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "description": "@Description Playlist name",
                    "type": "string",
                    "example": "My Favorite Songs"
                },
                "songs": {
                    "description": "@Description Songs in the playlist",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.SongResponse"
                    }
                },
                "updated_at": {
                    "description": "@Description When the playlist was last updated",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "userId": {
                    "description": "@Description User ID who owns the playlist",
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "models.SongCreateRequest": {
            "description": "Song creation request model",
            "type": "object",
            "required": [
                "duration",
                "title"
            ],
            "properties": {
                "album_id": {
                    "description": "@Description Optional album ID the song belongs to",
                    "type": "integer",
                    "example": 1
                },
                "duration": {
                    "description": "@Description Song duration in millseconds",
                    "type": "integer",
                    "example": 175000
                },
                "title": {
                    "description": "@Description Song title",
                    "type": "string",
                    "example": "Bohemian Rhapsody"
                }
            }
        },
        "models.SongResponse": {
            "description": "Song response model",
            "type": "object",
            "properties": {
                "album_id": {
                    "description": "@Description Optional album ID the song belongs to",
                    "type": "integer",
                    "example": 1
                },
                "created_at": {
                    "description": "@Description When the song was created",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "duration": {
                    "description": "@Description Song duration in milliseconds",
                    "type": "integer",
                    "example": 175000
                },
                "id": {
                    "description": "@Description Unique identifier for the song",
                    "type": "integer",
                    "example": 1
                },
                "title": {
                    "description": "@Description Song title",
                    "type": "string",
                    "example": "Bohemian Rhapsody"
                },
                "updated_at": {
                    "description": "@Description When the song was last updated",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "user_id": {
                    "description": "@Description User ID who owns the song",
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "models.UserLoginRequest": {
            "description": "Login request model",
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "description": "@Description User's email address",
                    "type": "string",
                    "example": "john@example.com"
                },
                "password": {
                    "description": "@Description User's password",
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "models.UserRegisterRequest": {
            "description": "Registration request model",
            "type": "object",
            "required": [
                "email",
                "name",
                "password",
                "role"
            ],
            "properties": {
                "email": {
                    "description": "@Description User's email address",
                    "type": "string",
                    "example": "john@example.com"
                },
                "name": {
                    "description": "@Description User's full name",
                    "type": "string",
                    "example": "John Doe"
                },
                "password": {
                    "description": "@Description User's password",
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                },
                "role": {
                    "description": "@Description User's role in the system",
                    "type": "string",
                    "example": "artist"
                }
            }
        },
        "models.UserResponse": {
            "description": "User response model (excludes password)",
            "type": "object",
            "properties": {
                "albums": {
                    "description": "@Description User's albums",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.AlbumResponse"
                    }
                },
                "created_at": {
                    "description": "@Description When the user was created",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                },
                "email": {
                    "description": "@Description User's email address",
                    "type": "string",
                    "example": "john@example.com"
                },
                "id": {
                    "description": "@Description Unique identifier for the user",
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "description": "@Description User's full name",
                    "type": "string",
                    "example": "John Doe"
                },
                "role": {
                    "description": "@Description User's role in the system",
                    "type": "string",
                    "example": "artist"
                },
                "songs": {
                    "description": "@Description User's songs",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.SongResponse"
                    }
                },
                "updated_at": {
                    "description": "@Description When the user was last updated",
                    "type": "string",
                    "example": "2023-01-01T00:00:00Z"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}